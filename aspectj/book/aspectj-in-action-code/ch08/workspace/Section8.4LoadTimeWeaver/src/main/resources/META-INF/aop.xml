<aspectj>
	<aspects>
		<!--
			Assume ajia.monitoring.Monitoring is an abstract aspect with an
			abstract monitored() pointcut
		-->
		<concrete-aspect name="ajia.monitoring.JDBCMonitoring"
			extends="ajia.monitoring.Monitoring">
			<pointcut name="monitored" expression="call(* java.sql.*.*(..))" />
		</concrete-aspect>
		<!-- ... -->
	</aspects>
	<!-- ... -->
</aspectj>


